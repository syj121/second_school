<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>SecondSchool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-type="index">
    <%= render "shared/amaze/header"%>

    <div class="tpl-page-container tpl-page-header-fixed">
      <%= render "shared/amaze/left_menu"%>

      <!-- 主体内容 -->
      <div class="tpl-content-wrapper">
        <!-- 标题 -->
        <div class="tpl-content-page-title">Amaze UI 首页组件</div>
        <!-- 标题 END -->

        <!-- 导航栏 -->
        <ol class="am-breadcrumb">
          <li><a href="#" class="am-icon-home">首页</a></li>
          <li><a href="#">分类</a></li>
          <li class="am-active">内容</li>
        </ol>
        <!-- 导航栏 END -->

        <!-- main -->
        <div class="tpl-portlet-components">
          <!-- title -->
          <div class="portlet-title">
            <div class="caption font-green bold">
              <span class="am-icon-code"></span>
              <%= content_for :head_title%>
            </div>
          </div>
          <!-- title end -->

          <div class="tpl-block">
            <%= yield %>
          </div>

          <!-- alert -->
          <div class="tpl-alert"></div>
          <!-- alert end -->
        </div>
        <!-- main end -->

      </div>
      <!-- 主体内容 END -->
    </div>

    <%= render "shared/amaze/footer"%>

  </body>
</html>

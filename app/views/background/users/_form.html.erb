<%= form_for [:background, @user] do |f|%>
	<table>
		<tr>
			<td>login_name</td>
			<td><%= f.text_field :login_name%></td>
		</tr>
		<tr>
			<td>password</td>
			<td><%= f.text_field :password%></td>
		</tr>
		<tr>
			<td>password_confirmation</td>
			<td><%= f.text_field :password_confirmation%></td>
		</tr>
	</table>
	<%= f.submit "submit"%>
<% end -%>
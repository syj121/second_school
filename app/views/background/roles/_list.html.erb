<div class="am-g">
	<div class="am-u-sm-12">
		<table class="am-table am-table-striped am-table-hover table-main">
			<thead>
				<tr>
					<th>序号</th>
					<th>角色名称</th>
					<th>角色描述</th>
					<th>新增时间</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<% @roles.each_with_index do |role, index|%>
					<tr id="role_<%= role.id%>">
						<td id="role_index_<%= index + 1%>"><%= index + 1%></td>
						<td id="role_name_<%= role.id%>"><%= role.name%></td>
						<td id="role_desc_<%= role.id%>"><%= role.desc%></td>
						<td id="role_index_<%= role.id%>"><%= l role.created_at%></td>
						<td>										
							<div class="am-btn-group am-btn-group-xs">
								<%= link_to_void class: "am-btn am-btn-default am-btn-xs am-text-secondary", onclick: "common_dialog('#{edit_background_role_path(role)}', '编辑角色')" do %>
									<span class="am-icon-pencil-square-o"></span> 编辑
								<% end %>
								<%= link_to_void class: "am-btn am-btn-default am-btn-xs am-text-secondary", onclick: "common_dialog('#{menus_background_role_path(role)}', '设置菜单')" do %>
									<span class="am-icon-pencil-square-o"></span> 菜单
								<% end %>
								<%= link_to_void class: "am-btn am-btn-default am-btn-xs am-text-secondary", onclick: "common_dialog('#{pundit_groups_background_role_path(role)}', '设置权限')" do %>
									<span class="am-icon-pencil-square-o"></span> 权限
								<% end %>
								<%= link_to_void class: "am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only", onclick: "destroy_record('#{background_role_path(role)}') " do %>
									<span class="am-icon-trash-o"></span> 删除
								<% end %>
							</div>										
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= paginate @roles, remote: true%>
<%= content_for :head_title, "表单"%>

<div class="am-g tpl-amazeui-form">
	<div class="am-u-sm-12 am-u-md-9">
		<%= form_for [:background, @menu], html: {class: "am-form am-form-horizontal valid_engine ajax_common_form"} do |f|%>
			<div class="am-form-group">
				<label class="am-u-sm-3 am-form-label">菜单名：</label>
				<div class="am-u-sm-9">
					<%= f.text_field :name, class: "validate[required]"%>
					<small></small>
				</div>
			</div>

			<div class="am-form-group">
				<label class="am-u-sm-3 am-form-label">关联系统菜单：</label>
				<div class="am-u-sm-9">
					<%= f.select :controller_path, @menus, class: "validate[required]"%>
					<small></small>
				</div>
			</div>

			<div class="am-form-group">
				<label class="am-u-sm-3 am-form-label">菜单描述：</label>
				<div class="am-u-sm-9">
					<%= f.text_field :description%>
					<small></small>
				</div>
			</div>

			<%= render "shared/amaze/submit_button", f: f%>

		<% end -%>
	</div>
</div>